<div class="row text-center">
  <h1>Add a photo</h1>
</div>

<%= render "layouts/errors", :object => @photo %>

<div class="well col-md-6 col-md-offset-3 text-center">
  <%= form_for @photo, html: { multipart: true } do |f| %>
    <div class="text-center row">
      <%= f.file_field :image %>
    </div>
    <div class="form-group">
      <%= f.label :caption %>
      <%= f.text_field :caption, class: 'form-control' %>
    </div>
    <%= f.submit 'Add picture', class: 'btn btn-default' %>
  <% end %>
</div>
