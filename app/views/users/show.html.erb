<div class= "profile-header">
  <p><%=@user.name %>
  <% if owns? %>
    <span class="pull-right"><%= link_to "Add a picture", new_photo_path, class:"btn btn-default" %></span>
    <% end %>
    </p>
</div>
<hr>
<br>

<% @photos.each do |photo| %>
    <%= image_tag photo.image.url %>
    <%= render :partial => "layouts/tag_form", locals: { photo: photo } %>
<% end %>

<div class="container text-center">
  <h3>Photos of <%= @user.name %></h3>


  <ul>
    <% @tagged_in_photos.each do |t| %>
      <%= link_to photo_path(Photo.find(t.photo_id)) do %>
        <%= image_tag Photo.find(t.photo_id).image.url(:thumb) %>
      <% end %>

    <% end %>
  </ul>
</div>

